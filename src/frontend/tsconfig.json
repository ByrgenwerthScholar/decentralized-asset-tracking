{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../../types/*"]
    },
    "rootDir": "../../src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "ES6",
    "module": "commonjs"
  },
  "include": ["src", "../../types"],
  "exclude": ["dist"]
}
