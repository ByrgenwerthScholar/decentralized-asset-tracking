{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../../types/*"]
    },
    "rootDir": "../../src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonjs",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
  },
  "include": ["src", "../../types"],
  "exclude": ["dist"]
}
